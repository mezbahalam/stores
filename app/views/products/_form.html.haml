= form_for @product, multipart: true do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sqft
    = f.select :name, options_for_select([ '0-999','1000-9999','10000-99999' ])

  .field
    = f.label :unit
    = f.select :qnt, options_for_select([ 1, 2,3,4,5,6 ])

  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Save'
